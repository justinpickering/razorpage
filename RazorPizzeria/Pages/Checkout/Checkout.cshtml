@page
@model RazorPizzeria.Pages.Checkout.CheckoutModel
@{
}

<h1>Your Order!</h1>

@{
    var imagePath = "~/images/Pizzas/" + (@Model.ImageTitle + ".png");

}

<div class="align-content-center">
    <div class="col-3 mx-auto mb-5">
        <img src="@imagePath" asp-append-version="true" class="w-100"/>
        <p>Your Order for the @Model.PizzaName is ready</p>
        <p>Total Purchased price for your order is: $@Model.PizzaPrice</p>
        <br />
        <a class="btn btn-primary mt-1 mx-auto" asp-area="" asp-page="ThankYou">Confirm Order</a>
    </div>
</div>